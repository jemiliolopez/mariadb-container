{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "0-Test",
        "annotations": {
            "openshift.io/display-name": "Test-is-wp",
            "description": "Testear la imagenes wordpress. Para ello las desplegamos.",
            "tags": "test-is-wp"
        },
        "labels": {
            "template": "0-test"
        }
    },
    "parameters": [
        {
            "name": "PROJECT_NAME",
            "description": "Nombre del proyecto openshift para poder acceder a su registro de imágenes de docker.",
            "value": "imagenes-wordpress"
        },
        {
            "name": "APP_NAME",
            "description": "Nombre de la aplicación.",
            "value": "is-wp"
        },
        {
            "name": "DOCKER_REGISTER",
            "description": "The password for the database user.",
            "value": "docker-registry.default.svc:5000"
        }
    ],
    "objects": [
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-secret",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}",
                    "build": "${APP_NAME}"
                }
            },
            "type": "Opaque",
            "stringData": {
                "mysql.password": "amigo",
                "mysql.root.password": "enemigo"
            }
        },
        {
            "kind": "ConfigMap",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-cfmap",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}",
                    "build": "${APP_NAME}"
                }
            },
            "data": {
                "mysql.user": "gente",
                "mysql.database": "puedeser"
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}",
                    "build": "${APP_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${APP_NAME}",
                    "deployconfig": "${APP_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APP_NAME}",
                            "deployconfig": "${APP_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_NAME}",
                                "image": "${DOCKER_REGISTER}/${PROJECT_NAME}/${APP_NAME}:latest",
                                "resources": {
                                    "limits": {
                                        "memory": "512Mi"
                                    }
                                },
                                "env": [
                                    {
                                        "name": "DB_USER",
                                        "valueFrom": {
                                            "configMapKeyRef": {
                                                "name": "${APP_NAME}-cfmap",
                                                "key": "mysql.user"
                                            }
                                        }
                                    },
                                    {
                                        "name": "DB_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${APP_NAME}-secret",
                                                "key": "mysql.password"
                                            }
                                        }
                                    },
                                    {
                                        "name": "DB_DATABASE",
                                        "valueFrom": {
                                            "configMapKeyRef": {
                                                "name": "${APP_NAME}-cfmap",
                                                "key": "mysql.database"
                                            }
                                        }
                                    },
                                    {
                                        "name": "DB_ROOT_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${APP_NAME}-secret",
                                                "key": "mysql.root.password"
                                            }
                                        }
                                    }
                                ]
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": "30"
                    }
                }
            }
        }
    ]
}