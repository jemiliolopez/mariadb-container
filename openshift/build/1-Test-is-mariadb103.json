{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "Test is-wp",
        "annotations": {
            "openshift.io/display-name": "Test-is-wp",
            "description": "Testear la imagenes wordpress. Para ello las desplegamos.",
            "tags": "test-is-wp"
        },
        "labels": {
            "template": "test-is-wp"
        }
    },
    "parameters": [
        {
            "name": "PROJECT_NAME",
            "description": "Nombre del proyecto openshift para poder acceder a su registro de imágenes de docker.",
            "value": "imagenes-wordpress"
        },
        {
            "name": "APP_NAME",
            "description": "Nombre de la aplicación.",
            "value": "is-wp"
        },
        {
            "name": "STRATEGY_TYPE",
            "description": "Servicio de mysql.",
            "value": "Source",
            "required": true
        },
        {
            "name": "SOURCE_IMAGE_STREAM",
            "description": "Imagen stream desde la que se parte.",
            "value": "docker-registry.default.svc:5000/imagenes-wordpress/is-0-mariadb-10.3"
        },
        {
            "name": "STRATEGY_TYPE",
            "description": "Servicio de mysql.",
            "value": "Docker"
        },
        {
            "name": "SSH_GITHUB",
            "description": "Servicio de mysql.",
            "value": "github-secret-jemiliolopez",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_MYSQL_URL",
            "description": "The URL of the quickstart Git repository.",
            "value": "git@github.com:jemiliolopez/mysql-container.git",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_MYSQL_TAG",
            "description": "The tagged version of the source repository to use.",
            "value": "master",
            "required": true
        },
        {
            "name": "DOCKER_REGISTER",
            "description": "The password for the database user.",
            "value": "docker-registry.default.svc:5000"
        },
        {
            "name": "MYSQL_USER",
            "description": "El nombre del host donde se encuentra la base de datos. Generalmente suele ser el nombre del servicio que expone la base de datos.",
            "value": "user"
        },
        {
            "name": "MYSQL_PASSWORD",
            "description": "Set the database collation.",
            "value": "passuser"
        },
        {
            "name": "MYSQL_OPERATIONS_USER",
            "description": "El nombre del host donde se encuentra la base de datos. Generalmente suele ser el nombre del servicio que expone la base de datos.",
            "value": "user"
        },
        {
            "name": "MYSQL_OPERATIONS_PASSWORD",
            "description": "Set the database collation.",
            "value": "passuser"
        },
        {
            "name": "MYSQL_DATABASE",
            "description": "El nombre del host donde se encuentra la base de datos. Generalmente suele ser el nombre del servicio que expone la base de datos.",
            "value": "dbasses"
        },
        {
            "name": "MYSQL_ROOT_PASSWORD",
            "description": "Set the database collation.",
            "value": "passroot"
        }
    ],
    "objects": [
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-secret",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}",
                    "build": "${APP_NAME}"
                }
            },
            "type": "Opaque",
            "stringData": {
                "mysql.password": "pass-user",
                "mysql.root.password": "pass-root"
            }
        },
        {
            "kind": "ConfigMap",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-cfmap",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}",
                    "build": "${APP_NAME}"
                }
            },
            "data": {
                "mysql.user": "user",
                "mysql.database": "database"
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}",
                    "build": "${APP_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${APP_NAME}",
                    "deployconfig": "${APP_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APP_NAME}",
                            "deployconfig": "${APP_NAME}"
                        }
                    },
                    "spec": {
                        "serviceAccount": "todo-uid",
                        "serviceAccountName": "todo-uid",
                        "securityContext": {
                            "runAsUser": "1001",
                            "runAsGroup": "1001",
                            "fsGroup": "0"
                        },
                        "volumes": [
                            {
                                "name": "${APP_NAME}-share",
                                "emptyDir": {
                                    "medium": "Memory"
                                },
                                "mode": "0777"
                            },
                            {
                                "name": "${APP_NAME}-secret-volume",
                                "secret": {
                                    "secretName": "${APP_NAME}-secret",
                                    "items": [
                                        {
                                            "key": "mysql.password",
                                            "path": "mysql-password",
                                            "mode": "0400"
                                        },
                                        {
                                            "key": "mysql.root.password",
                                            "path": "mysql-root-password",
                                            "mode": "0400"
                                        }
                                    ]
                                }
                            },
                            {
                                "name": "${APP_NAME}-cfmap-volume",
                                "configMap": {
                                    "name": "${APP_NAME}-cfmap",
                                    "items": [
                                        {
                                            "key": "mysql.user",
                                            "path": "mysql-user",
                                            "mode": "0400"
                                        },
                                        {
                                            "key": "mysql.database",
                                            "path": "mysql-database",
                                            "mode": "0400"
                                        }
                                    ]
                                }
                            }
                        ],
                        "containers": [
                            {
                                "name": "${APP_NAME}",
                                "image": "${DOCKER_REGISTER}/${PROJECT_NAME}/${APP_NAME}:latest",
                                "resources": {
                                    "limits": {
                                        "memory": "512Mi"
                                    }
                                },
                                "env": [],
                                "volumeMounts": [
                                    {
                                        "name": "${APP_NAME}-share",
                                        "mountPath": "/tmp/mysql"
                                    }
                                ]
                            }
                        ],
                        "initContainers": [
                            {
                                "name": "${APP_NAME}-init",
                                "image": "busybox",
                                "command": [
                                    "cp",
                                    "-R",
                                    "-f",
                                    "/tmp/shared",
                                    "/tmp/mysql"
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "64Mi"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "name": "${APP_NAME}-secret-volume",
                                        "mountPath": "/tmp/shared/secrets"
                                    },
                                    {
                                        "name": "${APP_NAME}-cfmap-volume",
                                        "mountPath": "/tmp/shared/cfmap"
                                    },
                                    {
                                        "name": "${APP_NAME}-share",
                                        "mountPath": "/tmp/mysql"
                                    }
                                ]
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": "30"
                    }
                }
            }
        }
    ]
}